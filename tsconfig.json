{
    "compilerOptions": {
        "outDir": "build",
        "baseUrl": "src",
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "importHelpers": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ],
        "plugins": [
            { "name": "typescript-tslint-plugin" }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}